<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>Match</title>  
        <link rel="stylesheet" href="/style.css">
    </head>
    <body class="container">
        <h1>Your Perfect Music Match!</h1>
        <table class="results-table">
            <thead>
              <tr>
                <th>Cover</th>
                <th>Title</th>
                <th>Artist</th>
                <th>Link</th>
                <th>Favorite</th>
              </tr>
            </thead>
            <tbody>
              <% songs.forEach(song => { %>
                <tr>
                  <td>
                    <% if (song.imageUrl) { %>
                      <img src="<%= song.imageUrl %>"
                           alt="Cover art for <%= song.title %>"
                           width="64" height="64">
                    <% } else { %>
                      —
                    <% } %>
                  </td>
        
                  <td><%= song.title %></td>
        
                  <td><%= song.artist %></td>
                  <td>
                    <a href="<%= song.externalUrl %>" target="_blank">Open</a>
                  </td>
        
                  <td>
                    <form action="/favorite" method="post">
                      <input type="hidden" name="id" value="<%= song.id %>">
                      <input type="hidden" name="imageUrl" value="<%= song.imageUrl %>">
                      <input type="hidden" name="title" value="<%= song.title %>">
                      <input type="hidden" name="artist" value="<%= song.artist %>">
                      <input type="hidden" name="externalUrl"value="<%= song.externalUrl %>">
                      <button>❤</button>
                    </form>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        
          <p><a class="home-link" href="/">Home</a> <a class="home-link outline" href="/search">New Search</a></p>
            <script src="server.js"></script>
    </body>
</html>